<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: "input" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "input" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field-check">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "LOG IN", class: "btn primary-btn" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>

